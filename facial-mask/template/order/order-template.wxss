.order-time {
  background: #ef9e9a;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  text-align: center;
  font-size: 14px;
}

.view-description {
  display: flex;
  flex: row;
}

.order-img {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #e8e8e8;
  border-radius: 5px;
}

.view-description .order-type {
  flex: 1;
  margin-left: 17rpx;
}

.order-type .order-item {
  color: #604687;
  font-size: 16px;
}

.order-type .order-teacher, .order-type .order-store, .order-type .order-address {
  font-size: 14px;
  margin-bottom: 5rpx;
}

.order-type .teacher-name, .order-type .store-detail {
  color: #91979d;
}

.order-type .detail-address {
  font-size: 12px;
  color: #91979d;
}

.order-wrap {
  width: 90%;
  margin: 30rpx auto;
}