<!--pages/orderList/orderList.wxml-->
<import src='../../template/dialog/dialog-template.wxml' />
<view>
  <template is="dialog" data="{{authorizeShow}}"></template>
</view>
<view class='order-label common-center'>
  <view class='label active'>全部</view>
  <view class='label'>待服务</view>
  <view class='label'>待评价</view>
  <view class='label'>已完成</view>
  <view class='label'>已退款</view>
</view>
<view class='margin-line'></view>
<view class='order-content'>
  <view class='view-list common-center' catchtap='onOrderDetail'>
    <view class='avatar-img'>
      <image src='/images/banner.png' class='img'/>
    </view>
    <view class='order-des'>
      <view class='order-name'>美白嫩肤</view>
      <view class='order-num'>订单号:<text class='num'>11111111111</text></view>
      <view class='name-price'>
        <view>美容师:<text class='beau-name'>小雅</text></view>
        <view>价格：<text class='price-num'>￥1999</text></view>
      </view>
    </view>
    <view class='order-type'>
      <view class='wait'>等待服务</view>
    </view>
  </view>
  <view class='margin-line'></view>
</view>