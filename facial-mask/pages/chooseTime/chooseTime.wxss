/* pages/chooseTime/chooseTime.wxss */


.beautician-title {
  width: 90%;
  margin: 0 auto;
   position: fixed;
  top: 30rpx;
  z-index: 99;
  left: 5%;
}

.beautician-title .big-title {
  margin: 0 0 20rpx;
  font-size: 20px;
  font-weight: bold;
}

.beautician-title .two-title {
  font-size: 12px;
  color: #91979d;
  margin-bottom: 20rpx;
}



.tab-h {
  height: 125rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top:170rpx;
  z-index: 99;
  border-top:1px solid #e6e6e6;
  border-bottom:1px solid #e6e6e6;
}

.tab-item .week {
  font-size: 14px;
  color: #b2b7bb;
  margin-top:3px;
}

.tab-item.active {
  background: #604687;
  position: relative;
  color: #fff;
}

.tab-item.active .week {
  color: #fff;
}

.tab-item {
  text-align: center;
  width: 125rpx;
  margin: 0 36rpx;
  display: inline-block;
  height: 100rpx;
  position: relative;
  padding:3px 0;
}

.tab-item:after, .tab-item:before {
  border: solid transparent;
  content: ' ';
  height: 0;
  top: 100%;
  position: absolute;
  width: 0;
}

.tab-item.active::before {
  border-width: 12rpx;
  border-top-color: #000;
  left:53rpx;
}

.tab-item.active:after {
  border-width: 15rpx;
  border-top-color: #604687;
  left: 50rpx;
}

.item-ans {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  text-align: center;

}
.time-button {
  background: #f4f4f4;
  border: 1px solid #e6e6e6;
  padding: 25rpx;
  width:32%;
  margin-right:2%;
  box-sizing: border-box;
  float: left;
  margin-bottom:20rpx;
  border-radius: 10rpx;
  color:#bdc1c5;
}
.time-button:nth-child(3n){
  margin-right:0;
}
.time-button.checked{
  border:1px solid #604687;
  color:#604687;
}
.time-button.chooseTime{
  border:1px solid #000;
  color:#000;
}
.tab-content {
  margin-top: 300rpx;
}

.scoll-h {
  height: 100%;
}
.choose-result{
  position: fixed;
  bottom:0;
  border-top:1px solid #e6e6e6;
  height: 100rpx;
  line-height:100rpx;
  font-size:16px;
  font-weight:bold;
  width:100%;
}
.choose-result .choose-date{
  color:#604687;
  width:60%;
  text-align: center;
  float:left;
}
.choose-result .choose-button{
  width:40%;
  background: #604687;
  color:#fff;
  float:right;
  text-align: center;
}
