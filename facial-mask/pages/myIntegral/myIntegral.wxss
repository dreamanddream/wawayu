/* pages/myIntegral/myIntegral.wxss */
.myIntegral-wrap{
  color:#604687;
  text-align: center;
  margin:50rpx auto;
}
.myIntegral-wrap .integral-title{
  font-size:14px;
}
.myIntegral-wrap .integral-num{
  font-size:30px;
  font-weight:bold;
}
.integral-content{
  width:90%;
  margin:0 auto;
}
.integral-title{
  margin-right:30rpx;
}
.integral-detail{
  color:#000;
  font-size:14px;
  width:90%;
  margin:50rpx auto 0;
  display: flex;
  justify-content: space-between;
}
.integral-content .change-coupon{
  border-bottom:1px solid #e8e8e8;
  padding:30rpx 0;
}
/* 积分兑换 */
.coupon-wrap{
  width:100%;
  margin:30rpx auto 0;
  background: #f5f6f8;
}
.coupon-wrap .coupon-list{
  border:1px solid #604687;
  position: relative;

}
.coupon-list{
  padding:40rpx 20rpx;
  border-radius: 10px;
  background: #fff;
  margin-bottom:30rpx;
}
.coupon-list .price{
  font-size:14px;
  position: absolute;
  top:50%;
  transform: translate(0,-50%);
}
.coupon-list .price-num{
  font-size:30px;
  font-weight: bold;
  color:#604687;

}
.coupon-list .coupon-left{
  float: left;
  border-right:1px dashed #604687;
  padding-right:20rpx;
}
.coupon-list .coupon-right{
  float:left;
  margin-left:135rpx;
}
.coupon-list .choose-price{
  font-size:14px;
  margin-bottom:10rpx;
}
.coupon-list .coupon-des{
  float:left;
  border-left:#604687 1px dashed;
  padding-left:10rpx;
}
.coupon-des .coupon-title{
  font-size:16px;
  margin-bottom:10rpx;
}
.coupon-des .coupon-date{
  font-size: 14px;
}
.coupon-button{
  float:left;
  font-size:14px;
  background: #604687;
  text-align: center;
  height:60rpx;
  line-height: 60rpx;
  color:#fff;
  margin-left:10rpx;
  padding:10rpx 25rpx;
  position: absolute;
  top:50%;
  transform: translate(0,-50%);
  border-radius: 10px;
  right:20rpx;
}