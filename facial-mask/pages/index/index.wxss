.more-things {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
popup__content {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  text-align: center;
}


/* 商家列表 */
.banner-img{
  width:100%;
  margin:0 auto;
}
.banner-img image{
  width:100%;
  border-radius: 5px;
}
.name{
  width:100%;
  margin:0 auto 5px;
  text-align: left;
}
.name text{
  font-size:16px;
}
.description{
  width:100%;
  margin:0 auto 10px;
}
.description .address{
  font-size:14px;
  float:left;
  margin-bottom: 10px;
  color:#969a9d;
}
.description .distance{
  float:right;
  font-size:14px;
  margin-bottom: 10px;
}
/* index-title */
.index-title {
  width:90%;
  margin:50rpx auto 40rpx;
}
.index-title view{
  text-align: left;
}
.index-title .title1{
  font-size:18px;
  font-weight: bold;
}
.index-title .title2{
  font-size:16px;
  color:#949aa1;
  margin-top:10px;
}
.description .address-img{
  width:15px;
  height:15px;
  margin-right:8px;
}
.list{
  width:90%;
  margin: 0 auto 30rpx;
  border-bottom:1px solid #e1e1e1;
  padding-bottom:50rpx;
}
.list:last-child{
  width:90%;
  margin: 0 auto 30rpx;
  border-bottom:none;
  padding-bottom:0rpx;
}