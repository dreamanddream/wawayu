.order-time {
  background: #ef9e9a;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  text-align: center;
  font-size: 14px;
}

.view-description {
  display: flex;
  flex: row;
}

.order-img {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #e8e8e8;
  border-radius: 5px;
}

.view-description .order-type {
  flex: 1;
  margin-left: 17rpx;
}

.order-type .order-item {
  color: #604687;
  font-size: 16px;
}

.order-type .order-teacher, .order-type .order-store, .order-type .order-address {
  font-size: 14px;
  margin-bottom: 5rpx;
}

.order-type .teacher-name, .order-type .store-detail {
  color: #91979d;
}

.order-type .detail-address {
  font-size: 12px;
  color: #91979d;
}

.order-wrap {
  width: 90%;
  margin: 30rpx auto;
}

.check-time {
  height: 110rpx;
  line-height: 110rpx;
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
  display: flex;
  flex: row;
  justify-content: space-between;
}

.check-time .check-date {
  color: #604687;
  font-size: 14px;
  font-weight: bold;
}


.common-list{
  width:90%;
  margin:0 auto;
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  flex: row;
  justify-content: space-between;
}
.common-list .common-theme{
  font-size:16px;
}
.common-list .common-detail{
  font-size:14px;
  color:#604687;
}
.choose-result{
  position: fixed;
  bottom:0;
  border-top:1px solid #e6e6e6;
  height: 100rpx;
  line-height:100rpx;
  font-size:16px;
  font-weight:bold;
  width:100%;
}
.choose-result .choose-date{
  color:#604687;
  width:60%;
  text-align: center;
  float:left;
}
.choose-result .choose-button{
  width:40%;
  background: #604687;
  color:#fff;
  float:right;
  text-align: center;
}
.margin-line-top{
  border-top:1px solid #e8e8e8;
  width:100%;
  height:20px;
  background: #f5f6f8
}